</div>

<div class="deposit content row g-0 pt-3 d-none">
  <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6">
    <h1 class="title">Payment Gateways</h1>
     <button type="button" class="btn btn-primary btn-back">Back</button>
  </div>
  <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 col-xxl-6">
    <div class="card m-2">
      <div class="payment">
        <div class="payment-title">
            <h2>Payment method</h2>
            <div class="time">
                <span class="minus"></span>
                <span> : </span>
                <span class="second"></span>
            </div>
        </div>
        <div class="payment-action">
            <label for="inputValue" class="col-form-label">Value</label>
            <input type="text" id="inputValue" class="form-control" aria-describedby="value"/>
        </div>
        <div class="payment-btns">
            <button id="sendUSDTButton" type="button" class="btn btn-primary btn-BUSD">BUSD</button>
            <button id="sendUSDTButton" type="button" class="btn btn-primary btn-USDT">USDT</button>
        </div>
      </div>
    </div>
  </div>
</div>